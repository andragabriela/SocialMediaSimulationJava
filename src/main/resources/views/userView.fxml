<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="userView" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socialnetworkgui.controller.UserController">
   <children>
      <TableView fx:id="tableView" layoutX="54.0" layoutY="93.0" prefHeight="289.0" prefWidth="477.0">
        <columns>
          <TableColumn fx:id="fnameColumn" prefWidth="140.5" text="First Name" />
          <TableColumn fx:id="lnameColumn" minWidth="0.0" prefWidth="197.5" text="Last Name" />
          <TableColumn fx:id="emailColumn" prefWidth="137.0" text="Email" />
        </columns>
      </TableView>
      <Label fx:id="loggedLabel" layoutX="61.0" layoutY="14.0" prefHeight="37.0" prefWidth="477.0" text="Logged in as:">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <Button fx:id="addFriendBtn" layoutX="458.0" layoutY="418.0" mnemonicParsing="false" onAction="#handleAddFriend" prefHeight="31.0" prefWidth="73.0" text="Add friend" />
      <Button fx:id="removeFriendBtn" layoutX="352.0" layoutY="418.0" mnemonicParsing="false" onAction="#handleRemove" prefHeight="31.0" prefWidth="94.0" text="Remove friend" />
      <Button fx:id="requestsBtn" layoutX="141.0" layoutY="418.0" mnemonicParsing="false" onAction="#handleRequests" prefHeight="31.0" prefWidth="103.0" text="Friend requests" />
      <Label layoutX="60.0" layoutY="65.0" prefHeight="23.0" prefWidth="467.0" text="FriendList:" />
      <Button fx:id="logOutBtn" layoutX="54.0" layoutY="418.0" mnemonicParsing="false" onAction="#handleLogOut" prefHeight="31.0" prefWidth="73.0" text="Log Out" />
      <Button layoutX="259.0" layoutY="418.0" mnemonicParsing="false" onAction="#handleMessage" prefHeight="31.0" prefWidth="81.0" text="Message" />
   </children>
</AnchorPane>
